<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Provides attributes for the Remiworks event bus framework.</Description>
    <Authors>Rene Buunk, Mike Derksen</Authors>
    <Company />
    <Version>2.0.0</Version>
    <PackageProjectUrl>https://github.com/Remiworks/EventBusFramework</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Remiworks/EventBusFramework</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>RabbitMq Wrapper Framework BusProvider Events Commands Rpc Eventbus Attributes</PackageTags>
    <PackageReleaseNotes>Changed to netstandard</PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.0.0" />
    <PackageReference Include="Remiworks.Core" Version="2.0.2" />
  </ItemGroup>

</Project>
